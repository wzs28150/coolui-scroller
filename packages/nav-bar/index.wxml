<view class="nav-bar" style="height:{{statusBarHeight}}px;background-color:{{config.background.color}}">
  <view class="nav-bar-inner" style="height:{{statusBarHeight}}px;padding-top:{{StatusBar}}px;{{config.background.img?'background-image:url(' + config.background.img+')':''}}">
    <block wx:if="{{type === 'default'}}">
      <view class="action" bindtap="BackPage" wx:if="{{config.back.show}}">
        <view class="line line1" style="background-color:{{config.text.color}}"></view>
        <view class="line line2" style="background-color:{{config.text.color}}"></view>
      </view>
      <view class="content" style="color: {{config.text.color}}">
        <slot />
      </view>
    </block>
    <block wx:else>
      <slot />
    </block>
  </view>
</view>