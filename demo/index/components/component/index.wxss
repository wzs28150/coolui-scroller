.component {
  position: relative;
  height: calc(100vh - 100rpx);
}

.component .bg {
  height: 30vh;
  z-index: 0;
  overflow: hidden;
  color: #d13435;
}

.component .logo {
  margin: 0 auto;
  position: absolute;
  width: 100vw;
  top: 7vh;
  left: 0;
  z-index: 89;
  transition: opacity 0.3s;
  padding: 30rpx 0;
  text-align: center;
  font-weight: bold;
  font-size: 100rpx;
  color: #fff;
  font-family: 'Lobster variant0';
}

.component .logo .logo-img {
  width: 80vw;
  height: calc(0.13 * 80vw);
  margin: 0 auto;
  padding: 30rpx 0;
  display: block;
}

.component .inner {
  margin: 30vh 30rpx 30rpx;
  height: calc(100% - 100rpx - 40px - 30vh - 60rpx);
  position: absolute;
  width: calc(100vw - 60rpx);
  top: 0;
  left: 0;
  z-index: 89;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  /* display: none; */
}

.component .inner .scroll {
  height: 100%;
}

.component .inner .scroll .list {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  height: calc(100vh - 100rpx - 90rpx - 30vh);
}

.component .inner .scroll .list .item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  width: 33.3333%;
  text-align: center;
}

.component .inner .scroll .list .item .icon {
  width: 84rpx;
  height: 84rpx;
  display: block;
  margin: 0 auto;
}

.component .inner .scroll .list .item::after {
  content: "";
  position: absolute;
  transform-origin: center;
  box-sizing: border-box;
  pointer-events: none;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  transform: scale(0.5);
  border-bottom: 1px solid #eee;
}

.component .inner .scroll .list .item::before {
  content: "";
  position: absolute;
  transform-origin: center;
  box-sizing: border-box;
  pointer-events: none;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  transform: scale(0.5);
  border-right: 1px solid #eee;
}

.component .inner .scroll .list .item.brn::before {
  display: none;
}

.component .inner .scroll .list .item.bbn::after {
  display: none;
}

.component .inner .scroll .list .item .right-icon {
  width: 14px;
  height: 14px;
  position: relative;
  overflow: hidden;
}

.component .inner .scroll .list .item .right-icon::before {
  width: 10px;
  height: 1px;
  background-color: #ccc;
  content: "";
  display: block;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  right: 0;
  transform-origin: 10px;
}

.component .inner .scroll .list .item .right-icon::after {
  width: 10px;
  height: 1px;
  background-color: #ccc;
  content: "";
  display: block;
  transform: rotate(-45deg);
  position: absolute;
  top: 50%;
  right: 0;
  transform-origin: 10px;
}
